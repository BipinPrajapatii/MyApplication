@model MyApplication.Core.Model.Account.LoginViewModel
@{
    Layout = "~/Views/Shared/_Account.cshtml";
    ViewData["Title"] = "Login";
}
<div class="col-12 col-md-6">
    <form method="post" class="login-form">
        <img src="~/images/TimeTrackingSoft_155x82.png" height="150" alt="logo" />
        <div class="card mb-0">
            <div class="card-body">

                <div class="form-group form-group-feedback form-group-feedback-left">
                    <label class="lable-txt">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span class="email-icon"><i class="fas fa-envelope"></i></span>
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>

                <div class="form-group form-group-feedback form-group-feedback-left">
                    <label class="lable-txt">Password</label>
                    <input asp-for="Password" class="form-control" />
                    <span class="password-icon"><i class="fas fa-lock"></i></span>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <span asp-validation-for="RememberMe" class="text-danger"></span>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Log in</button>
                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                        <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                    </div>

                </div>


                <div class="text-left forgotpass">
                    <a href="/Account/ForgotPassword">Forgot password?</a>
                </div>

            </div>
        </div>
        <div class="not-customer text-center">
            <span>Not a customer?</span><a href="/Account/RegisterCompany" class="try-free">Try for Free</a>
        </div>
    </form>
</div>
<div class="col-12 col-md-6 login-rightside text-center">
    <h2 class="title" style="font-weight:bolder;">Manage and Monitor all your remote employees from a Single Dashboard</h2>
    <span class="subtitle"></span>
    <div class="row">
        <div class=" shadow p-3 mb-5 bg-white rounded  mr-1 col-sm text-center">
            <i><img src="~/css/icons/clock.png" width="50" height="50"/></i>
            <h1 style="font-weight:bolder;">Real Time Monitoring</h1>
            <p style="font-size:15px;">Know how much your time is worth? Break down your hours by projects, clients and tasks to see what's making you money and holding you back.</p>
        </div>
        <div class=" shadow p-3 mb-5 bg-white rounded  ml-1 mr-1 col-sm text-center">
            <i><img src="~/css/icons/Desktop.png" width="50" height="50" /></i>
            <h1 style="font-weight:bolder;">Auto Screenshots</h1>
            <p style="font-size:15px;">TimeTrackingSoft auto screenshots let you capture team members' computer screens at random intervals of time.</p>
        </div>
        <div class=" shadow p-3 mb-5 bg-white rounded  col-sm ml-1 text-center">
            <i><img src="~/css/icons/you-tube.png" width="50" height="50" /></i>
            <h1 style="font-weight:bolder;">Url & App Tracking</h1>
            <p style="font-size:15px;">Track URLs and app usage to know which programs or websites your employees run while working.</p>
        </div>
    </div> 
    <div class="row">
        <div class=" shadow p-3 mb-5 bg-white rounded  mr-1 col-sm text-center">
            <i><img src="~/css/icons/user-times.png" width="50" height="50" /></i>
            <h1 style="font-weight:bolder;">Time & Attendence</h1>
            <p style="font-size:15px;">TimeTrackingSoft’s shift scheduling feature gives you access to detailed performance stats for each shift your employees have worked.</p>
        </div>
        <div class=" shadow p-3 mb-5 bg-white rounded  ml-1 mr-1 col-sm text-center">
            <i><img src="~/css/icons/Product-Hunt.jpg" width="50" height="50" /></i>
            <h1 style="font-weight:bolder;">Productivity Tracking</h1>
            <p style="font-size:15px;">Know how much your time is worth? Break down your hours by projects, clients and tasks to see what's making you money and holding you back.</p>
        </div>
        <div class=" shadow p-3 mb-5 bg-white rounded  ml-1 col-sm text-center">
            <i><img src="~/css/icons/binoculars.png" width="50" height="50" /></i>
            <h1 style="font-weight:bolder;">Activity Tracking</h1>
            <p style="font-size:15px;">Track employee computer with minimal exposure of TimeTrackingSoft and with no control over tracking from user.</p>
